assign [class="^Spotify$"] → 5: media
assign [class="emacs"] → 2: edit
assign [class="nemo"] → 4: file
assign [class="pidgin"] → 6: chat
assign [class="skype"] → 6: chat


bindsym $mod+z workspace prev
bindsym $mod+x workspace next

